<div class="humanplayer-container">
    <div class="humanplayer-head">
        <p class="underline">{{ player.name }}</p>
        <p class="smaller">${{ player.buyIn }}</p>
    </div>
    {% if player.role is same as "d" %}
        <div class="dealer-chip-container">
                <img
                    class="dealer-chip"
                    src="{{ asset('img/proj/dealer.png') }}"
                    width="50"
                >
        </div>
    {% endif %}
    <div class="proj-card-container">
        {% for card in player.holeCards %}
            <img class="hole-card" src="{{ asset('img/cards/' ~ card ~ '.png') }}">
        {% endfor %}
    </div>
</div>
<div class="player-bet-container">
    <div class="player-chip-container">
        {% if player.bets > 0 %}
            {% for i in 1 .. (player.bets / chipSize) %}
                <img
                    class="rotated"
                    src="{{ asset('img/proj/poker4.jpg') }}"
                    style='top: -{{ (((i + 5) * 4) - 20) ~ "px" }}';
                >
            {% endfor %}
        {% endif %}
    </div>
    <div class="bet-size-container">
        <p class="smaller">${{ player.bets }}</p>
    </div>
</div>
<div class="best-hand-container">
    <div class="best-hand-cards">
        {% for card in player.bestHand %}
            <img class="best-card" src="{{ asset('img/cards/' ~ card ~ '.png') }}">
        {% endfor %}
    </div>
    <div class="best-hand-name">
        <p>BÃ¤sta handen: {{ player.bestHandName }}</p>
    </div>
</div>