{% extends "proj_base.html.twig" %}

{% block title %}MVC Project{% endblock %}

{% block main %}
<div class="outer-preflop-container">
    <div class="proj-preflop-container">
    </div>
    {% for player in queuePlayers %}
        {% if player.wallet is defined %}
            {% include 'proj/proj-player.html.twig' %}
        {% else %}
            {% include 'proj/proj-computer.html.twig' %}
        {% endif %}
    {% endfor %}
    {% include 'proj/proj-message.html.twig' %}
    <div class="proj-pot-container">
        <p class="pot-size">Pott: $0</p>
    </div>
    {% include 'proj/proj-action-buttons.html.twig' %}
</div>
{% endblock %}